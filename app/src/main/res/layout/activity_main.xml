<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="id.sch.smktelkom_mlg.tugas01.xirpl1008.project1.MainActivity">

    <TextView
        android:id="@+id/textViewSw"
        style="@style/Base.TextAppearance.AppCompat.Headline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Pendaftaran Siswa Baru"
        android:textColor="#0e0303"/>

    <TextView
        android:id="@+id/textViewSm"
        style="@style/Base.TextAppearance.AppCompat.Headline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="SMK TELKOM MALANG"
        android:textColor="#b22323"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="79dp"
        android:layout_height="101dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/logo"/>

    <TextView
        android:id="@+id/textViewNama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama"/>

    <EditText
        android:id="@+id/editTextNama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/textViewAsal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Asal SMP"/>

    <EditText
        android:id="@+id/editTextAsal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jenis Kelamin"/>

    <RadioGroup
        android:id="@+id/radioGroupJK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/radioButtonL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="Laki - Laki"/>

        <RadioButton
            android:id="@+id/radioButtonP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="Perempuan"/>
    </RadioGroup>

    <TextView
        android:id="@+id/textViewJurusan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jurusan"/>

    <Spinner
        android:id="@+id/spinnerProvinsi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/jurusan"/>

        <TextView
            android:id="@+id/textViewEks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kegiatan Ekstrakurikuler"/>

        <CheckBox
            android:id="@+id/checkBoxBas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="Basket"/>

        <CheckBox
            android:id="@+id/checkBoxVol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="Voli"/>

        <CheckBox
            android:id="@+id/checkBoxFut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="Futsal"/>

        <CheckBox
            android:id="@+id/checkBoxPas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="Paskibra"/>

        <Button
        android:id="@+id/buttonOK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OK"/>

    <TextView
        android:id="@+id/textViewHasil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hasil"/>

</LinearLayout>
</ScrollView>